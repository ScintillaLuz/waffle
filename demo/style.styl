// Demo Page
// for Waffle
// a CSS inline-block framework

@import url("//fonts.googleapis.com/css?family=Kavoon")
@import url("http://fonts.googleapis.com/css?family=Open\+Sans:400,300,600,700,800")
@import url("//fonts.googleapis.com/css?family=Inconsolata:400,700")

@import '../stylus/utils'

$color_bg = #F0EFED
$color_main = #603E66
$color_secondary = #B2EBE2
$color_blocks = #DDD9D1
$color_special_blocks = #D1BED5

body
    color $color_main
    background-color $color_bg
    font-family "Open Sans", Helvetica, sans-serif
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

    a
        text-decoration none
        color darken($color_secondary, 40%)

        transition(color 0.5s ease)

        &:hover
            color darken($color_secondary, 20%)

.main-wrap
    @media screen and (max-width: 1024px)
        padding 0.85em

.demo

    h1
        font-family "Kavoon", Georgia, serif
        font-size 7em
        color $color_main
        text-shadow 4px 4px 0px darken($color_secondary, 15%)

        margin 0.4em 0 0 0

        @media screen and (max-width: 640px)
            font-size 4em

    h2
        font-weight 300
        font-size 1.8em

        margin 0.3em 0

    h3
        font-weight 800
        font-size 1.3em
        text-transform uppercase

        margin 3.2em 0 0.8em 0

    h2,
    h3
        line-height 1.6em

        @media screen and (max-width: 640px)
            font-weight 400
            font-size 1.2em

    .block
        background-color $color_blocks
        padding 35px
        border-radius 5px

        font-family "Inconsolata", monospaced
        font-size 1.2em
        text-align center

        transition(all 0.5s ease)

        &:hover
            background-color $color_secondary
            cursor pointer

    .size
        color darken($color_secondary, 50%)

    .intro
        background-color $color_special_blocks

    .hide-on-desktop .block
        background-color $color_secondary

        &:hover
            background-color $color_special_blocks

    button
        background-color darken($color_special_blocks, 25%)
        display inline-block
        padding 10px 20px
        border-radius 5px
        border none

        font-weight 600
        font-size 0.85em
        color white
        text-transform uppercase

        &:hover
            background-color $color_special_blocks
            color darken($color_special_blocks, 65%)

        .fa
            font-size 2em

    .button-green
        background-color darken($color_secondary, 25%)

        &:hover
            background-color $color_secondary
            color darken($color_secondary, 65%)

    .last div

        &:last-of-type
            margin-bottom 12em
