// Demo Page
// for Waffle
// a CSS inline-block framework

@import url("//fonts.googleapis.com/css?family=Luckiest+Guy")
@import url("//fonts.googleapis.com/css?family=Open\+Sans:400,300,600,700,800")
@import url("//fonts.googleapis.com/css?family=Inconsolata:400,700")
@import url("//fonts.googleapis.com/css?family=Merriweather:400,400italic,300italic,300,700,700italic")

@import '../stylus/utils'


// Colors
$color_main = #43423F
$color_secondary = lighten($color_main, 25%)
$color_bg = #F6F4EE
$color_red = #DF4B4B
$color_blue = #4F97DA
$color_light_blue = lighten($color_blue, 70%)
$color_light_red = lighten($color_red, 80%)
$color_dark_blue = shade($color_blue, 40%)
$color_dark_red = shade($color_red, 10%)

// Buttons Colors
$color_bg_button = shade($color_bg, 6%)
$color_text_button = shade($color_bg, 45%)
$color_border_button = shade($color_bg, 15%)
$box_shadow_color = rgba($color_secondary, 0.4)

// Rounded Corners
$rounded_corners = 4px


body
    color $color_main

    font-family "Open Sans", Helvetica, sans-serif
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

    a
        color $color_red
        border-bottom 1px solid @color

        text-decoration none

        transition(all 0.3s ease)

        &:hover
            color darken($color_blue, 15%)
            border-bottom 1px solid @color

code
    padding 2px 3px
    color $color_main
    background-color $color_bg
    border 1px solid shade($color_bg, 15%)
    border-radius 2px

    font-family 'Inconsolata', monospaced
    font-size 0.95em

// Button Styles
.button
    padding 0.9em 1em

    border-radius $rounded_corners
    border 1px solid transparent

    background-color $color_bg_button
    color $color_text_button

    font-size 0.8em
    font-weight 600
    text-transform uppercase
    letter-spacing 0.05em

    transition(all 0.3s ease)

    &:hover
        box-shadow 0px 4px 4px -4px $box_shadow_color
        border 1px solid $color_border_button

        color shade($color_text_button, 25%)
        background-color shade($color_bg_button, 6%)

    &:active
        box-shadow inset 0px 0px 3px 2px shade($color_bg_button, 12%)

    @media screen and (max-width: 640px)
        display block

.btn-light-blue
    @extend .button
    background-color $color_light_blue
    color $color_dark_blue

    &:hover
        background-color lighten($color_blue, 50%)
        border 1px solid lighten($color_blue, 30%)
        color @color

.btn-light-red
    @extend .button
    background-color $color_light_red
    color $color_dark_red

    &:hover
        background-color lighten($color_red, 70%)
        border 1px solid lighten($color_red, 40%)
        color @color

.btn-blue
    @extend .button
    background-color $color_blue
    color white

    &:hover
        background-color lighten($color_blue, 10%)
        border 1px solid darken($color_blue, 20%)
        color @color

        text-shadow 1px 1px 4px rgba($color_blue, 0.8)

.btn-red
    @extend .button
    background-color $color_red
    color white

    &:hover
        background-color lighten($color_red, 10%)
        border 1px solid darken($color_red, 20%)
        color @color
        text-shadow 1px 1px 4px rgba($color_red, 0.8)

.btn-small
    @extend .button
    padding 0.5em 0.8em
    font-size 0.75em


// Blocks Styles

.block
    background-color $color_bg
    padding 35px

    outline 1px dashed $color_border_button

    font-family "Inconsolata", monospaced
    font-size 1em
    text-align center

    transition(all 0.5s ease)

    &:hover
        background-color $color_light_blue
        outline 1px dashed $color_blue

        cursor pointer

    .extra-info
        color $color_text_button


// Page Style


// Shared Styles

// Add padding on both sides for phones
body > .row
    @media screen and (max-width: 640px)
        padding 0 1rem

.title-chapter
.subtitle-chapter
    text-align center

.title-chapter
    margin 1.5em 0 0 0

    font-size 2.4em
    font-weight 300

    @media screen and (max-width: 640px)
        font-size 2em

.subtitle-chapter
    font-size 1.1em
    font-weight 400
    text-transform uppercase

.description
    margin 2em 0

    font-family 'Merriweather', Georgia, serif
    font-weight 400
    font-size 1em
    line-height 1.9em

    @media screen and (max-width: 640px)
        font-size 1em

    a
        font-weight 700


// Introduction

.intro
    background-color $color_bg

    img
        max-width 100%
        margin 3em 0 0 0

    h1
        margin 0.5em 0 0 0

        font-family 'Luckiest Guy', Georgia, serif
        font-size 6.5em
        font-weight normal

        @media screen and (max-width: 640px)
            margin 0.8em 0 0 0
            font-size 4em

    h2
        margin 0.5em 0 0 0

        font-size 1.5em
        font-weight 400

        @media screen and (max-width: 640px)
            padding 0 1.2em
            line-height 1.6em
            font-size 1em

    p
        color lighten($color_main, 40%)
        font-size 1.1em
        font-weight 400

        @media screen and (max-width: 640px)
            padding 0 1em
            font-size 0.9em

    .menu
        margin 2em 0 3em 0

        @media screen and (max-width: 640px)
            margin 0

        .button
            @media screen and (max-width: 640px)
                margin 0 0 0.7em 0

// About Waffle

.about-waffle

    .button
        @media screen and (max-width: 640px)
            margin-bottom 0.7em


// Justify

.tags
    margin 1em 0 2em 0

.cannibal-dishes
    position relative

    .img-container

        a
            opacity 0.5
            border-bottom none

            transition(all 0.3s ease)

            &:hover
                opacity 1

            img
                max-width 100%

    .navigation
        position absolute
        z-index 10
        top 38%

        pointer-events none

        .nav

            .fa
                color $color_main

                font-size 4em
                text-align center
                text-shadow 1px 2px 4px rgba($color_main, 0.3)

                opacity 0.9

        .nav.left
            margin-left -0.5em

        .nav.right
            margin-right -0.5em

// Fork me!

.fork
    background-color $color_bg

    .unit
        @media screen and (max-width: 640px)
            padding 0 1em

    .title
        margin 1em 0 0 0

        font-family 'Luckiest Guy', Georgia, serif
        font-weight normal
        font-size 6em

        @media screen and (max-width: 640px)
            font-size 4em

    .description
        margin 0

    .get-waffle
        margin 1.6em 0 5em 0

        @media screen and (max-width: 640px)
            margin 1.6em 0 1em 0

    .button
        @media screen and (max-width: 640px)
            margin-bottom 0.7em

// Footer
footer
    background-color $color_red

    .content
        padding 3rem 0

        p
            margin 0
            color white

            font-size 0.8em
            font-weight 700
            letter-spacing 0.03em

            a
                color white
                border-bottom 1px solid lighten($color_red, 25%)

                &:hover
                    border-bottom 1px solid white

            @media screen and (max-width: 640px)
                padding 0 1em
                font-weight 600
                text-align center

        @media screen and (max-width: 640px)
            padding 2rem 0

