// Mixin for tags
tags(color = shade($color_blue, 30%), bg_color = lighten($color_blue, 70%))
    color color
    background-color bg_color

    padding 0.5em 0.8em
    border-radius 2px

    font-size 0.8em
    font-weight 600
    text-transform uppercase
    letter-spacing 0.05em

    &:hover
        cursor pointer

.tags
    .title-menu
        tags(shade($color_bg, 40%), shade($color_bg, 5%))

    .dish
        tags()

    .email
        tags(shade($color_red, 20%), lighten($color_red, 70%))


.cannibal-dishes
    position relative

    .img-container

        a
            opacity 0.5
            border-bottom none

            transition(all 0.3s ease)

            &:hover
                opacity 1

            img
                max-width 100%

    .navigation
        position absolute
        z-index 10
        top 38%

        pointer-events none

        .nav

            .fa
                color $color_main

                font-size 4em
                text-align center
                text-shadow 1px 2px 4px rgba($color_main, 0.3)

                opacity 0.9

        .nav.left
            margin-left -0.5em

        .nav.right
            margin-right -0.5em

// Thanks

.acknowledgements
    background-color $color_bg

    .title-thanks
        font-family 'Luckiest Guy', Georgia, serif
        font-weight normal
        font-size 6em

// Footer
footer
    background-color $color_red

    p
        padding 1em 0
        color $color_bg

        font-size 0.85em
        font-weight 600
