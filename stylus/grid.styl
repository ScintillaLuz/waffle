// Waffle
// Responsive grid for modular layouts
// based on http://codepen.io/ilwcss/pen/KdkbI by @ilwcss
// and inspired by Gridism http://cobyism.com/gridism/ by @cobyism
// with much help wow from @vrde

// Reset default margins
body
    margin 0

// Define the box-model
.main-wrap
.row
.unit
    box-sizing border-box

.main-wrap
    max-width $width_layout
    margin 0 auto

    // Wider wrap on wider screens
    @media screen and (min-width: 1800px)
        max-width $width_layout_wider

.inside-wrap .row
    // Wrapping individual rows
    max-width $width_layout
    margin 0 auto

// Define basic unit
.unit
    display inline-block
    border $border_default solid transparent
    font-size $type_size
    vertical-align top


// Basic Grid System

// Define units
.unit
    width $full

.u-50
    width ($full / 2)

.u-33
    width ($full / 3)

.u-66
    width ($full * 2 / 3)

.u-25
    width ($full / 4)

    @media screen and (max-width: 800px)
        .unit.u-25
            width $full !important

.u-75
    width ($full * 3 / 4)

    @media screen and (max-width: 800px)
        .unit.u-75
            width $full !important

.u-16
    width ($full / 6)

// Responsive
.row .unit
    // Tweak border
    @media screen and (max-width: 800px)
        border $border_tablet solid transparent

    // Stack everything on phones
    @media screen and (max-width: 640px)
        width $full !important
        // Tweak border
        border $border_phone solid transparent


// Waffle Grid System: the parent tells the children
.split3 .unit
    width ($full / 3)

.split4 .unit
    width ($full / 4)

    @media screen and (max-width: 800px)
        width ($full / 3)
        border $border_tablet solid transparent

.split5 .unit
    width ($full / 5)

    @media screen and (max-width: 1024px)
        width ($full / 4)

    @media screen and (max-width: 800px)
        width ($full / 3)
        border $border_tablet solid transparent

.split6 .unit
    width ($full / 6)

    @media screen and (max-width: 1024px)
        width ($full / 5)

    @media screen and (max-width: 800px)
        width ($full / 3)
        border $border_tablet solid transparent

.split3 .unit,
.split4 .unit,
.split5 .unit,
.split6 .unit
    @media screen and (max-width: 640px)
        width: ($full / 2) !important
        border $border_phone solid transparent


// Play with the grid

.row
    // Get rid of whitespace for inline-block elements
    font-size 0

.row.justify
    // Want to distribute elements evenly in a row?
    text-align justify

    &::after
        content ''
        width $full
        display inline-block

.row.justify .unit
    width auto

.row.justify .unit
    @media screen and (max-width: 640px)
        width auto !important

.row.center
    // Center elements in a row
    text-align center

.no-gutters .unit
    // Remove gutters
    border none !important

.row .unit.parent
    // Getting rid of borders for nested units
    border none

// Utility classes

.hide-on-tablets
    // Hide mobile elements on tablets portrait and desktop
    @media screen and (min-width: 800px)
        display none !important

.show-on-tablets
    // Show elements on tablet portraits and phones
    @media screen and (max-width: 799px)
        display none !important

.hide-on-mobiles
    // Hide elements only on phones landscape
    @media screen and (max-width: 639px)
        display none !important

.show-on-mobiles
    // Show elements only on phones landscape
    @media screen and (min-width: 640px)
        display none !important

.reset-list
    // Stop worrying about list types
    list-style-type none
    padding 0

.menu-list
    // When lists are used as horizontal menus
    @extend .reset-list

    li
        display inline-block
