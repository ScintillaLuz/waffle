// Experimental Grids
.three-to-one
    .unit
        &:nth-of-type(1)
            width ($full / 4)

            @media screen and (max-width: 800px)
                width ($full / 3) !important

            @media screen and (max-width: 640px)
                width $full !important

        &:nth-of-type(2)
            width ($full / 2)

            @media screen and (max-width: 800px)
                width ($full * 2 / 3) !important

            @media screen and (max-width: 640px)
                width $full !important

        &:nth-of-type(3)
            width ($full / 4)

            @media screen and (max-width: 800px)
                width $full !important